<p id="notice"><%= notice %></p>

<h1 align="center">Polling Made Easy</h1>

<div align="center">
  <%= link_to 'Create a New Poll', new_poll_path, class: 'btn btn-success'  %>
</div>

<% @polls.order('created_at DESC').each do |poll| %>
  <table class="table" style="width: 600px" align="center">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= poll.title %></td>
        <td><%= link_to 'Vote', poll, class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit poll', edit_poll_path(poll), class: 'btn btn-primary'  %></td>
      </tr>

      <% poll.options.order(:title).each do |option| %>
        <tr>
          <td><%= option.title %></td>
          <td><%= option.count %></td>
        </tr>
        <% end %>

        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
        <tr></tr>
      </tbody>
    </table>
<% end %>
