<p>
  <strong>Title:</strong>
  <%= @poll.title %>
</p>

<p>
  <strong>End:</strong>
  <%= @poll.end %>
</p>

<h2>Options</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Option</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @poll.end <= Time.now %>
      <% @poll.options.order(:title).each do |option| %>
          <tr>
            <td><%= link_to "Vote", "/polls/#{@poll.id}/options/#{option.id}", method: :put%></td>
            <td><%= option.title %></td>
            <td><%= option.count %></td>
          </tr>
      <% end %>
    <% else %>
        <tr>
          <td>Poll in progress</td>
        </tr>
      <% @poll.options.order(:title).each do |option| %>
        <tr>
          <td><%= link_to "Vote", "/polls/#{@poll.id}/options/#{option.id}", method: :put%></td>
          <td><%= option.title %></td>
        </tr>
      <% end %>
    <% end %>
    <tr></tr>
  </tbody>
</table>


<%= link_to 'Edit', edit_poll_path(@poll) %> |
<%= link_to 'Back', polls_path %>
