<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @poll.title %>
</p>

<p>
  <strong>End:</strong>
  <%= @poll.end %>
</p>

<h2>Options</h2>
<table>
  <thead>
    <tr>
      <th>Option</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poll.options.each do |option| %>
      <tr>
        <td><%= option.title %></td>
        <td><%= option.count %></td>
      </tr>
      <tr></tr>
    <% end %>
  </tbody>
</table>

<h2>Add option:</h2>
<%= form_for([@poll, @poll.options.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_poll_path(@poll) %> |
<%= link_to 'Back', polls_path %>
