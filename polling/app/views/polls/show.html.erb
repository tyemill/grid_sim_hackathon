<p>
  <strong>Title:</strong>
  <%= @poll.title %>
</p>

<p>
  <strong>End:</strong>
  <%= @poll.end %>
</p>

<h2>Options</h2>
<table>
  <thead>
    <tr>
      <th>Option</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poll.options.order(:title).each do |option| %>
      <tr>
        <td><%= option.title %></td>
        <td><%= option.count %></td>
        <td><%= link_to "Vote", "/polls/#{@poll.id}/options/#{option.id}", method: :put%></td>
      </tr>
      <tr></tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_poll_path(@poll) %> |
<%= link_to 'Back', polls_path %>
